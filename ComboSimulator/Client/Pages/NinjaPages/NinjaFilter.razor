<tbody>
    @foreach (var i in FilteredList)
    {
        <NinjaDisplay Ninja="i" />
    }
    @RenderFragment
</tbody>

@code {
    [Parameter]
    public List<Ninja> FilteredList { get; set; }
    [Parameter]
    public RenderFragment RenderFragment { get; set; }

    public void RefreshTable()
    {
        StateHasChanged();
    }
}