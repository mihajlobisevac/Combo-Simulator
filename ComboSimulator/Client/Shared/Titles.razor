@inherits TitlesBase

<div class="title-container">
    @if (BackButton == true)
    {
        <a href="@BackRoute">
            <svg style="margin: 0.8em 0" xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-arrow-left" width="2em" height="2em" viewBox="0 0 24 24" stroke-width="1.5" stroke="#607D8B" fill="none" stroke-linecap="round" stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" />
                <line x1="5" y1="12" x2="19" y2="12" />
                <line x1="5" y1="12" x2="11" y2="18" />
                <line x1="5" y1="12" x2="11" y2="6" />
            </svg>
        </a>
    }

    <h3 class="title-text title-gap anim-fade">@Text</h3>

    @if (NewButton == true)
    {
        <a href="@NewRoute" class="btn btn-success rounded-pill title-gap anim-fade">
            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-circle-plus" width="2em" height="2em" viewBox="0 0 24 24" stroke-width="1.5" stroke="#ffffff" fill="none" stroke-linecap="round" stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" />
                <circle cx="12" cy="12" r="9" />
                <line x1="9" y1="12" x2="15" y2="12" />
                <line x1="12" y1="9" x2="12" y2="15" />
            </svg>
            <span style="vertical-align: middle">New</span>
        </a>
    }
    @if (EditButton == true)
    {
        <a href="@EditRoute" class="btn btn-primary rounded-pill title-gap anim-fade">
            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-edit" width="2em" height="2em" viewBox="0 0 24 24" stroke-width="1.5" stroke="#ffffff" fill="none" stroke-linecap="round" stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" />
                <path d="M9 7 h-3a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-3" />
                <path d="M9 15h3l8.5 -8.5a1.5 1.5 0 0 0 -3 -3l-8.5 8.5v3" />
                <line x1="16" y1="5" x2="19" y2="8" />
            </svg>
            <span style="vertical-align: middle">Edit</span>
        </a>
    }
    @if (DeleteButton == true)
    {
        <button class="btn btn-danger rounded-pill title-gap" @onclick="DeleteMethod">
            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-trash" width="2em" height="2em" viewBox="0 0 24 24" stroke-width="1.5" stroke="#ffffff" fill="none" stroke-linecap="round" stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" />
                <line x1="4" y1="7" x2="20" y2="7" />
                <line x1="10" y1="11" x2="10" y2="17" />
                <line x1="14" y1="11" x2="14" y2="17" />
                <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12" />
                <path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3" />
            </svg>
            <span style="vertical-align: middle">Delete</span>
        </button>
    }
    @if (SearchInput == true)
    {
        <input type="text" class="form-control title-search" placeholder="Search" aria-label="Search" aria-describedby="basic-addon1"
               @bind-value="@SearchTerm">
    }
</div>
<hr />